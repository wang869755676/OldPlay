<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <include
        android:id="@+id/title"
        layout="@layout/title_forum"></include>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_marginBottom="52dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <!--帖子的基本内容-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">


                <TextView
                    android:id="@+id/forum_detail_sence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="精华" />

                <TextView
                    android:id="@+id/forum_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/forum_detail_sence"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="标题标题标题标题" />

                <LinearLayout
                    android:id="@+id/ll_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/forum_detail_sence"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/forum_detail_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="400评论" />

                    <TextView
                        android:id="@+id/forum_detail_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="编辑" />


                </LinearLayout>


                <TextView
                    android:id="@+id/forum_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/forum_detail_sence"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/ll_des"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="发帖人的名字" />
            </RelativeLayout>
            <!-- 视频图片的内容-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></FrameLayout>
            <!--评价信息-->
            <View
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:background="@color/gray"></View>

            <TextView
                android:id="@+id/tv_coment_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:text="全部评论"
                android:textSize="15sp" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/swipe_target"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

        </LinearLayout>


    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_comment"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"

            android:drawablePadding="7dp"
            android:hint="说点什么吧..."
            android:paddingBottom="6dp"
            android:paddingLeft="8dp"
            android:paddingTop="6dp" />

        <Button
            android:id="@+id/bt_publish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="end|center_vertical"
            android:paddingRight="15dp"
            android:text="发送"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>
