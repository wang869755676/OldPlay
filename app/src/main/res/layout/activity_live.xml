<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--主播的画面-->
    <com.qiniu.pili.droid.streaming.widget.AspectFrameLayout
        android:id="@+id/live_afl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.opengl.GLSurfaceView
            android:id="@+id/live_sfv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

    </com.qiniu.pili.droid.streaming.widget.AspectFrameLayout>

    <!--连麦的窗口 如果需要多个窗口添加-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/live_fl_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClickRemoteWindowA"
            android:visibility="invisible">

            <android.opengl.GLSurfaceView
                android:id="@+id/live_gfv_winow"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:visibility="invisible" />

        </FrameLayout>

    </LinearLayout>

    <!--聊天的回话界面-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/live_rv_chat"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/ControlButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:onClick=""
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="开始直播"
        android:textColor="@android:color/white" />


</FrameLayout>
