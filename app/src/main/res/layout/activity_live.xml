<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--主播的画面-->
    <com.qiniu.pili.droid.streaming.widget.AspectFrameLayout
        android:id="@+id/live_afl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.opengl.GLSurfaceView
            android:id="@+id/live_sfv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

    </com.qiniu.pili.droid.streaming.widget.AspectFrameLayout>

    <!--连麦的窗口 如果需要多个窗口添加-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/live_fl_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClickRemoteWindowA"
            android:visibility="invisible">

            <android.opengl.GLSurfaceView
                android:id="@+id/live_gfv_winow"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:visibility="invisible" />

        </FrameLayout>

    </LinearLayout>

    <!--聊天的回话界面-->
    <LinearLayout
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:scrollbarTrackVertical="@color/bg_gray"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:fadeScrollbars="false"
            android:background="@drawable/corwhite"
            android:scrollbarThumbVertical="@mipmap/icon_live_bars"
            android:id="@+id/live_rv_chat"
            android:layout_width="196dp"
            android:layout_height="226dp"
            android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/live_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/cor_trgray_5"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@mipmap/icon_live_person"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="观看人数"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/live_person_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <!--连麦操作-->
    <TextView
        android:id="@+id/live_lianmai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@mipmap/icon_live_lianmai"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="开启连麦"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/live_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:src="@mipmap/icon_live_close" />

    <Button
        android:id="@+id/ControlButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="开始直播"
        android:textColor="@android:color/white"
        android:visibility="gone" />


</FrameLayout>
