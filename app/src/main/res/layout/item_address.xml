<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/item_addrs_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="收货人:王先生"
                android:textColor="@color/coure_tv"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_addrs_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="联系人:电话"
                android:textColor="@color/coure_tv"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_addrs_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:text="cxxxxxdsfsdfsdfsdfsdddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddsfxxx"
            android:textColor="@color/home_gray"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <CheckBox
                    android:id="@+id/addr_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:button="@null"
                    android:checked="true"

                    android:drawablePadding="5dp"
                    android:text="设为默认" />
            </FrameLayout>


            <TextView
                android:id="@+id/addr_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_adr_modify"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/home_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/addr_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@mipmap/icon_adr_delete"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/home_gray"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>