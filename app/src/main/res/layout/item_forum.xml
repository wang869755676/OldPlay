<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <com.td.oldplay.widget.CircleImageView
            android:id="@+id/item_forum_iv"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="15dp" />


        <ImageView
            android:id="@+id/item_sence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:src="@mipmap/icon_forum_secne"
            android:text="精华" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_forum_iv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/item_sence"
            android:layout_toRightOf="@id/item_forum_iv"
            android:ellipsize="end"
            android:lines="1"
            android:text="标题标题标题标题"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_title"
            android:layout_below="@+id/item_title"
            android:layout_marginRight="36dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/item_forum_iv"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_forum_iv"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/item_name"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="发帖"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"></View>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/icon_forum" />

            <TextView
                android:id="@+id/item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="0评论"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:gravity="center"
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/item_name"
                android:layout_marginRight="20dp"
                android:text="1个小时"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>