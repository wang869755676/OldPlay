<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="105dp"
        apps:cardCornerRadius="5dp"
        apps:cardElevation="5dp">

        <com.td.oldplay.widget.SelectableRoundedImageView
            android:id="@+id/home_forum_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            apps:sriv_left_bottom_corner_radius="5dp"
            apps:sriv_left_top_corner_radius="5dp"
            apps:sriv_right_bottom_corner_radius="5dp"
            apps:sriv_right_top_corner_radius="5dp" />


        <TextView
            android:id="@+id/home_forum_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="nane"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </android.support.v7.widget.CardView>

</FrameLayout>