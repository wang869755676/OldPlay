<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_gray"></View>

    <RelativeLayout
        android:id="@+id/mine_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:lines="1"
            android:text="1234"
            android:textColor="@color/tv_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/order_num"
            android:text="下单时间"
            android:textColor="@color/tv_gray"
            android:textSize="15sp" />


    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_order_socre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="积分抵扣"
            android:textColor="@color/tv_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_order_smoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="合计 180"
            android:textColor="@color/tv_black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">
        <TextView
            android:visibility="gone"
            android:id="@+id/item_order_groupstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="查看物流"
            android:textColor="@color/tv_red"
            android:textSize="14sp" />
        <LinearLayout
            android:id="@+id/item_order_done_action"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_order_logistics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="查看物流"
                android:textColor="#2E2E2E"
                android:textSize="14sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/item_order_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="评价"
                android:textColor="#2E2E2E"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_oreder_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="确认收货"
                android:textColor="@color/tv_red" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>