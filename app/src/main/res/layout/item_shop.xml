<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:padding="10dp">


    <ImageView
        android:id="@+id/item_shop_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_shop_iv"
        android:layout_toRightOf="@+id/item_shop_iv"
        android:ellipsize="end"
        android:lines="1"
        android:text="商品名称    "
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_shop_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/item_shop_iv"
        android:ellipsize="end"
        android:lines="1"
        android:text="价格"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/item_shop_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv1"
        android:layout_toRightOf="@+id/tv1"
        android:ellipsize="end"
        android:lines="1"
        android:text="1000"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/item_shop_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv1"
        android:ellipsize="end"
        android:lines="1"
        android:text="1000"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv1"
        android:layout_toLeftOf="@id/item_shop_sell"
        android:ellipsize="end"
        android:lines="1"
        android:text="销量"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/item_shop_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_shop_iv"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/item_shop_iv"
        android:ellipsize="end"
        android:lines="1"
        android:text="购买可得积分"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black"></View>

</RelativeLayout>