<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">


    <com.td.oldplay.widget.SelectableRoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_shop_iv"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"
        app:sriv_left_bottom_corner_radius="5dp"
        app:sriv_left_top_corner_radius="5dp"
        app:sriv_right_bottom_corner_radius="5dp"
        app:sriv_right_top_corner_radius="5dp" />

    <TextView
        android:id="@+id/item_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_shop_iv"
        android:layout_toRightOf="@+id/item_shop_iv"
        android:ellipsize="end"
        android:lines="1"
        android:text="商品名称    "
        android:textColor="@color/coure_tv"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/item_shop_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_shop_iv"
        android:drawableLeft="@mipmap/icon_price"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="1000"
        android:textColor="@color/tv_red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_shop_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/item_shop_price"
        android:drawableLeft="@mipmap/icon_sell"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="1000"
        android:textColor="@color/home_gray" />


    <TextView
        android:id="@+id/item_shop_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_shop_iv"
        android:layout_toRightOf="@id/item_shop_iv"
        android:drawableLeft="@mipmap/icon_score"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="购买可得积分"
        android:textColor="@color/home_gray"
        android:textSize="14sp" />


</RelativeLayout>