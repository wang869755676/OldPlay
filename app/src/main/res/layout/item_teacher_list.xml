<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp">

        <com.td.oldplay.widget.SelectableRoundedImageView
            android:id="@+id/circularImage"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:scaleType="fitXY"
            app:sriv_left_bottom_corner_radius="5dp"
            app:sriv_left_top_corner_radius="5dp"
            app:sriv_right_bottom_corner_radius="5dp"
            app:sriv_right_top_corner_radius="5dp" />


        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/circularImage"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/circularImage"
            android:text="nane"
            android:textColor="@color/tv_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_name"
            android:layout_below="@+id/item_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:text="ddddddd"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/item_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_name"
            android:layout_below="@+id/item_school"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="0 年教龄"
            android:textSize="13sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>